@model AddCarFormModel

@{
	ViewData["Title"] = "Add Car";
}
<div class="container">
	<div class="row">
		<div class="col-6 offset-3">
			<h2>Add car</h2>
			<form method="post">
				<div class="form-group">
					<label asp-for="Brand"></label>
					<input asp-for="Brand" class="form-control" placeholder="BMW, Mercedes, etc...">
					<span asp-validation-for="Brand" class="small text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Model"></label>
					<input asp-for="Model" class="form-control" placeholder="550i, GT63s etc...">
					<span asp-validation-for="Model" class="small text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="ImageUrl"></label>
					<input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">
					<span asp-validation-for="ImageUrl" class="small text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Description"></label>
					<textarea asp-for="Description" class="form-control" placeholder="This is the perfect car ..."></textarea>
					<span asp-validation-for="Description" class="small text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Year"></label>
					<input asp-for="Year" class="form-control" placeholder="2000, 2001 ...">
					<span asp-validation-for="Year" class="small text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="CategoryId"></label>
					<select asp-for="CategoryId" class="form-control">
						@foreach(var category in Model.Categories)
						{
							<option value="@category.Id">@category.Name</option>
						}
					</select>
				</div>
				<div class="form-group">
					<input class="btn btn-primary" type="submit" value="Save"/>
				</div>
			</form>
		</div>
	</div>
</div>